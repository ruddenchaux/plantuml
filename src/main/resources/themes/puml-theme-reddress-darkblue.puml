@startuml

!if (%not(%variable_exists("$FONTNAME")))
!$FONTNAME = "Verdana"
!endif

!if (%not(%variable_exists("$FONTSIZE")))
!$FONTSIZE = 11
!endif

!$ACCENT = "1a66c2"
!$ACCENTDARK = "002642"
!$PRIMARYFONTCOLOR = "fff"
!$SECONDARY = "aaa"
!$ARROWCOLOR = "fff"
!$ARROWFONTCOLOR = "bbb"
!$BORDERCOLOR = "fff"
!$BOXBG = "2e2e2e"
!$LIGHTBORDERCOLOR = "767676"
!$LIGHTBG = "575757"

<style>
/* Global styles */
root {
  BackGroundColor transparent
}

/* Common font and basic styling */
element {
  FontColor $PRIMARYFONTCOLOR
  FontName $FONTNAME
  FontSize $FONTSIZE
}

/* Class diagrams */
classDiagram {
  class {
    BackGroundColor $BOXBG
    LineColor $BORDERCOLOR
    FontColor $PRIMARYFONTCOLOR
    FontName $FONTNAME
    FontSize $FONTSIZE

    attribute {
      FontColor $SECONDARY
      FontSize $FONTSIZE
    }
  }

  arrow {
    LineColor $ARROWCOLOR
    FontName $FONTNAME
    FontColor $ARROWFONTCOLOR
    FontSize $FONTSIZE
  }
}

/* Sequence diagrams */
sequenceDiagram {
  actor {
    BackGroundColor $ACCENT
    LineColor $ACCENTDARK
    FontColor $PRIMARYFONTCOLOR
    FontName $FONTNAME
    FontSize $FONTSIZE
  }

  participant {
    BackGroundColor $BOXBG
    LineColor $BORDERCOLOR
    FontColor $PRIMARYFONTCOLOR
    FontName $FONTNAME
    FontSize $FONTSIZE
  }

  collections {
    BackGroundColor $BOXBG
    LineColor $BORDERCOLOR
    FontColor $PRIMARYFONTCOLOR
    FontName $FONTNAME
    FontSize $FONTSIZE
  }

  sequenceBox {
    BackGroundColor $LIGHTBG
    LineColor $LIGHTBORDERCOLOR
    FontColor $PRIMARYFONTCOLOR
    FontName $FONTNAME
    FontSize $FONTSIZE
  }

  lifeLine {
    LineColor $ACCENT
    BackGroundColor $LIGHTBG
  }

  arrow {
    LineColor $ARROWCOLOR
    FontName $FONTNAME
    FontColor $ARROWFONTCOLOR
    FontSize $FONTSIZE
  }
}

/* Component diagrams */
componentDiagram {
  interface {
    BackGroundColor $ACCENT
    LineColor $ACCENTDARK
    FontColor $PRIMARYFONTCOLOR
    FontName $FONTNAME
    FontSize $FONTSIZE
  }

  component {
    BackGroundColor $BOXBG
    LineColor $BORDERCOLOR
    FontColor $PRIMARYFONTCOLOR
    FontName $FONTNAME
    FontSize $FONTSIZE
  }

  node {
    BackGroundColor $BOXBG
    LineColor $BORDERCOLOR
    FontColor $PRIMARYFONTCOLOR
    FontName $FONTNAME
    FontSize $FONTSIZE
  }

  database {
    BackGroundColor $BOXBG
    LineColor $BORDERCOLOR
    FontColor $PRIMARYFONTCOLOR
    FontName $FONTNAME
    FontSize $FONTSIZE
  }

  queue {
    BackGroundColor $BOXBG
    LineColor $BORDERCOLOR
    FontColor $PRIMARYFONTCOLOR
    FontName $FONTNAME
    FontSize $FONTSIZE
  }
}

/* Use Case diagrams */
usecaseDiagram {
  usecase {
    BackGroundColor $BOXBG
    LineColor $BORDERCOLOR
    FontColor $PRIMARYFONTCOLOR
    FontName $FONTNAME
    FontSize $FONTSIZE
  }

  actor {
    BackGroundColor $ACCENT
    LineColor $ACCENTDARK
    FontColor $PRIMARYFONTCOLOR
    FontName $FONTNAME
    FontSize $FONTSIZE
  }

  arrow {
    LineColor $ARROWCOLOR
    FontName $FONTNAME
    FontColor $ARROWFONTCOLOR
    FontSize $FONTSIZE
  }
}

/* Activity diagrams */
activityDiagram {
  activity {
    BackGroundColor $BOXBG
    LineColor $BORDERCOLOR
    FontColor $PRIMARYFONTCOLOR
    FontName $FONTNAME
    FontSize $FONTSIZE
  }

  arrow {
    LineColor $ARROWCOLOR
    FontName $FONTNAME
    FontColor $ARROWFONTCOLOR
    FontSize $FONTSIZE
  }
}

/* State diagrams */
stateDiagram {
  state {
    BackGroundColor $BOXBG
    LineColor $BORDERCOLOR
    FontColor $PRIMARYFONTCOLOR
    FontName $FONTNAME
    FontSize $FONTSIZE
  }

  arrow {
    LineColor $ARROWCOLOR
    FontName $FONTNAME
    FontColor $ARROWFONTCOLOR
    FontSize $FONTSIZE
  }
}

/* Object diagrams */
objectDiagram {
  object {
    BackGroundColor $BOXBG
    LineColor $BORDERCOLOR
    FontColor $PRIMARYFONTCOLOR
    FontName $FONTNAME
    FontSize $FONTSIZE
  }

  arrow {
    LineColor $ARROWCOLOR
    FontName $FONTNAME
    FontColor $ARROWFONTCOLOR
    FontSize $FONTSIZE
  }
}

/* Common elements across all diagrams */
note {
  BackGroundColor $ACCENT
  LineColor $ACCENTDARK
  FontColor $PRIMARYFONTCOLOR
  FontName $FONTNAME
  FontSize $FONTSIZE
}

cloud {
  BackGroundColor $BOXBG
  LineColor $BORDERCOLOR
  FontColor $PRIMARYFONTCOLOR
  FontName $FONTNAME
  FontSize $FONTSIZE
}

rectangle {
  BackGroundColor $BOXBG
  LineColor $BORDERCOLOR
  FontColor $PRIMARYFONTCOLOR
  FontName $FONTNAME
  FontSize $FONTSIZE
}

storage {
  BackGroundColor $BOXBG
  LineColor $BORDERCOLOR
  FontColor $PRIMARYFONTCOLOR
  FontName $FONTNAME
  FontSize $FONTSIZE
}

/* Special elements */
boundary {
  BackGroundColor $ACCENT
  LineColor $ACCENTDARK
  FontColor $PRIMARYFONTCOLOR
  FontName $FONTNAME
  FontSize $FONTSIZE
}

control {
  BackGroundColor $ACCENT
  LineColor $ACCENTDARK
  FontColor $PRIMARYFONTCOLOR
  FontName $FONTNAME
  FontSize $FONTSIZE
}

entity {
  BackGroundColor $ACCENT
  LineColor $ACCENTDARK
  FontColor $PRIMARYFONTCOLOR
  FontName $FONTNAME
  FontSize $FONTSIZE
}

/* Stereotype styling */
stereotype {
  FontColor $SECONDARY
  FontSize $FONTSIZE
  BackGroundColor $ACCENT
}

</style>

@enduml
